<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_primary"
            android:elevation="4dp"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/viewModeSpinner1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_alignParentRight="true"
                android:layout_weight="2"
                android:padding="4dp"
                android:popupBackground="@color/white"
                />

            <cz.mzk.tiledimageview.TiledImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="16dp"
                android:layout_weight="6"
                android:background="@color/theme_primary_light"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progressbar_background_filter"
            android:gravity="center"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"/>
        </LinearLayout>

    </FrameLayout>

    <!--separating space-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_primary"
            android:elevation="4dp"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/viewModeSpinner2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_alignParentRight="true"
                android:layout_weight="2"
                android:padding="4dp"
                android:popupBackground="@color/white"
                />

            <cz.mzk.tiledimageview.TiledImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="16dp"
                android:layout_weight="6"
                android:background="@color/theme_primary_light"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progressbar_background_filter"
            android:gravity="center"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>