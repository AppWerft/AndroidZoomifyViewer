<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/qrScannerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan" />

    <Button
        android:id="@+id/btnImagePropertiesHttpResponseCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageProperties.xml HTTP response codes" />
    
    <Button
        android:id="@+id/btnImagePropertiesServerErrors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageProperties.xml server errors" />

    <ListView
        android:id="@+id/buttonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>